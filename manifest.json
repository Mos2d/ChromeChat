{
  "manifest_version": 3,
  "name": "ChromeChat",
  "version": "1.3",
  "description": "AI chatbot with floating widget, random nature background, and Quran verse on new tab",
  "permissions": [
    "tabs",
    "scripting",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://api.alquran.cloud/*",
    "https://picsum.photos/*",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["athan.mp3"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
