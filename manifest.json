{
  "manifest_version": 3,
  "name": "ChromeChat",
  "version": "1.0",
  "description": "An AI chatbot Chrome extension using Rasa backend",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5005/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
